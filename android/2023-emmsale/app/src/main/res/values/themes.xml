<resources>

    <style name="Theme.Emmsale" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorSecondary">@color/primary_color</item>
        <item name="colorAccent">@color/primary_color</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="bottomNavigationStyle">@style/bottomNavigationViewStyle</item>
        <item name="android:textViewStyle">@style/basicTextFontStyle</item>
        <item name="android:editTextStyle">@style/basicTextFontStyle</item>
        <item name="bottomSheetDialogTheme">
            @style/ThemeOverlay.MaterialComponents.BottomSheetDialog
        </item>

        <item name="toolbarStyle">@style/PrimaryToolbarStyle</item>
        <!-- actionMenu 관련 속성은 메인 테마에 적용해야 함. 툴바 스타일에 적용하면 적용되지 않음 -->
        <item name="actionMenuTextAppearance">@style/PrimaryActionMenuTextAppearance</item>
        <item name="actionMenuTextColor">@color/all_enable_primary</item>

        <item name="IconTextButtonStyle">@style/IconTextButtonStyle</item>
        <item name="FilterTagStyle">@style/FilterTagStyle</item>
    </style>

    <style name="Theme.Emmsale.FullScreen" parent="Theme.Emmsale">
        <item name="android:windowFullscreen">true</item>
    </style>

</resources>
