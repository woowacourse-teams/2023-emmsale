<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.ui.eventdetail.participant.RecruitmentWritingActivity">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbarlayout_recruitmentwriting"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_recruitmentwriting_backpress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_all_arrowback"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="17dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_recruitmentwriting_appbartitle"
                    android:textSize="14sp"
                    android:fontFamily="@font/nanum_square_bold"
                    android:textColor="@color/text_color_black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:text="글쓰기" />

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/text_color_gray"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <TextView
                    android:text="등록"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="17dp"
                    android:textSize="14sp"
                    android:textColor="@color/text_color_green"
                    android:fontFamily="@font/nanum_square_bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:id="@+id/tv_recruitmentwriting_register" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <EditText
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:inputType="text"
            android:hint="모집글을 작성해주세요."
            android:fontFamily="@font/nanum_square_regular"
            android:textColorHint="@color/text_color_gray"
            android:textColor="@color/text_color_black"
            android:textSize="13sp"
            android:background="@null"
            android:maxLength="250"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/appbarlayout_recruitmentwriting"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="17dp"
            android:layout_marginEnd="17dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/et_recruitmentwriting"
            android:gravity="start"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
