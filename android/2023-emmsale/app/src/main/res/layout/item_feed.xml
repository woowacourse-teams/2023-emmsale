<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.emmsale.presentation.common.bindingadapter.DateTimePattern" />

        <import type="android.view.View" />

        <variable
            name="feed"
            type="com.emmsale.model.Feed" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_feed_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="17dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/nanum_square_bold"
            android:text="@{feed.title}"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="타임라인 어떻게 되나요?" />

        <TextView
            android:id="@+id/tv_feed_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="17dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="41dp"
            android:ellipsize="end"
            android:fontFamily="@font/nanum_square_regular"
            android:maxLines="2"
            android:text="@{feed.content}"
            android:textSize="13sp"
            app:layout_constraintEnd_toStartOf="@+id/iv_feed_title_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_feed_title"
            tools:text="행사 시간 공유 좀 해주실 분 부탁드려요" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/icon_feed_comment"
            android:layout_width="11sp"
            android:layout_height="11sp"
            android:layout_marginStart="17dp"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="15dp"
            android:src="@drawable/ic_all_comment"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_feed_content" />

        <TextView
            android:id="@+id/tv_post_comment_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:fontFamily="@font/nanum_square_regular"
            android:text="@{String.valueOf(feed.commentCount)}"
            android:textColor="@color/primary_color"
            android:textSize="11sp"
            app:layout_constraintBottom_toBottomOf="@+id/icon_feed_comment"
            app:layout_constraintStart_toEndOf="@+id/icon_feed_comment"
            app:layout_constraintTop_toTopOf="@+id/icon_feed_comment"
            tools:text="3" />

        <ImageView
            android:id="@+id/icon_feed_like"
            android:layout_width="11sp"
            android:layout_height="11sp"
            android:layout_marginStart="6dp"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="15dp"
            android:src="@drawable/ic_all_like"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_post_comment_count"
            app:layout_constraintTop_toBottomOf="@+id/tv_feed_content" />

        <TextView
            android:id="@+id/tv_feed_like_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:fontFamily="@font/nanum_square_regular"
            android:textColor="@color/post_like_color"
            android:textSize="11sp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/icon_feed_like"
            app:layout_constraintStart_toEndOf="@+id/icon_feed_like"
            app:layout_constraintTop_toTopOf="@+id/icon_feed_like"
            tools:text="1" />

        <View
            android:id="@+id/divider_like_to_time"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:background="@color/light_gray"
            app:layout_constraintBottom_toBottomOf="@+id/tv_feed_created_at"
            app:layout_constraintStart_toEndOf="@id/tv_feed_like_count"
            app:layout_constraintTop_toTopOf="@+id/tv_feed_created_at" />

        <TextView
            android:id="@+id/tv_feed_created_at"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/nanum_square_regular"
            android:textColor="@color/light_gray"
            android:textSize="11sp"
            app:dateText="@{feed.createdAt}"
            app:dateTimeFormatter="@{DateTimePattern.RELATIVE_TIME}"
            app:layout_constraintBottom_toBottomOf="@+id/tv_feed_like_count"
            app:layout_constraintStart_toEndOf="@+id/divider_like_to_time"
            app:layout_constraintTop_toTopOf="@+id/tv_feed_like_count"
            tools:text="15분전" />

        <ImageView
            android:id="@+id/iv_feed_title_image"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="17dp"
            android:scaleType="centerCrop"
            android:visibility="@{feed.imageUrls.isEmpty() ? View.GONE : View.VISIBLE}"
            app:imageUrl="@{feed.titleImageUrl}"
            app:layout_constraintBottom_toBottomOf="@+id/icon_feed_comment"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/img_all_loading" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
