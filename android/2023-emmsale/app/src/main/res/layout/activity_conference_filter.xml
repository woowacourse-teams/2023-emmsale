<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".presentation.ui.main.event.conferenceFilter.ConferenceFilterActivity">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/tb_event_filter"
            android:layout_width="0dp"
            android:layout_height="?actionBarSize"
            android:keepScreenOn="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:menu="@menu/menu_conference_filter"
            app:navigationIcon="@drawable/ic_back"
            app:title="@string/event_filter_title"
            app:titleCentered="true"
            app:titleTextAppearance="@style/EventFilterToolbarTitleFontStyle" />

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fillViewport="true"
            android:scrollbars="none"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tb_event_filter">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include
                    android:id="@+id/layout_filter_status"
                    layout="@layout/layout_filter_conference_status" />

                <include
                    android:id="@+id/layout_filter_tag"
                    layout="@layout/layout_filter_conference_event_tag" />

                <include
                    android:id="@+id/layout_filter_duration"
                    layout="@layout/layout_filter_conference_duration" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/btn_filter_apply"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginHorizontal="17dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="17dp"
                    android:background="@drawable/bg_event_filter_button"
                    android:gravity="center"
                    android:paddingVertical="21dp"
                    android:text="@string/event_filter_apply"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

            </LinearLayout>

        </ScrollView>

        <ProgressBar
            android:id="@+id/progressbar_loading"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:indeterminate="true"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="0.15"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
