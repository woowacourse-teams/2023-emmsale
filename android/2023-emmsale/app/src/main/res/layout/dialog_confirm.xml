<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="title"
            type="String" />

        <variable
            name="message"
            type="String" />

        <variable
            name="positiveButtonLabel"
            type="String" />

        <variable
            name="negativeButtonLabel"
            type="String" />

        <variable
            name="onPositiveButtonClick"
            type="kotlin.jvm.functions.Function0" />

        <variable
            name="onNegativeButtonClick"
            type="kotlin.jvm.functions.Function0" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_all_dialog">


        <TextView
            android:id="@+id/tv_warningdialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="29dp"
            android:text="@{title}"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="댓글 삭제" />

        <TextView
            android:id="@+id/tv_warningdialog_message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="29dp"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="29dp"
            android:gravity="center"
            android:text="@{message}"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_warningdialog_title"
            tools:text="댓글 삭제" />

        <View
            android:id="@+id/view_warningdialog_horizontaldivider"
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:layout_marginTop="24dp"
            android:background="@color/light_gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_warningdialog_message" />

        <View
            android:id="@+id/view_warningdialog_verticaldivider"
            android:layout_width="0.5dp"
            android:layout_height="0dp"
            android:background="@color/light_gray"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_warningdialog_horizontaldivider" />

        <TextView
            android:id="@+id/tv_warningdailog_okbuttonlabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:onClick="@{() -> onPositiveButtonClick.invoke()}"
            android:paddingVertical="20dp"
            android:text="@{positiveButtonLabel}"
            android:textColor="@color/primary_color"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/view_warningdialog_verticaldivider"
            app:layout_constraintTop_toTopOf="@+id/view_warningdialog_verticaldivider"
            tools:text="확인" />

        <TextView
            android:id="@+id/tv_warningdialog_cancelbuttonlabel"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:onClick="@{() -> onNegativeButtonClick.invoke()}"
            android:paddingVertical="20dp"
            android:text="@{negativeButtonLabel}"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/view_warningdialog_verticaldivider"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/view_warningdialog_verticaldivider"
            tools:text="취소" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>