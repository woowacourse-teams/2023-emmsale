<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="myPost"
            type="com.emmsale.presentation.ui.setting.myPost.uiState.MyPostUiState" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/tv_my_post_date_fixed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanum_square_regular"
            android:textColor="@color/gray"
            android:textSize="11sp"
            tools:text="수정됨"
            app:layout_constraintStart_toEndOf="@id/tv_my_post_date"
            android:layout_marginStart="3dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tv_my_post_content" />

        <TextView
            android:text="@{myPost.eventName}"
            android:id="@+id/tv_eventrecruitment_membername"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:fontFamily="@font/nanum_square_bold"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:ellipsize="end"
            android:maxLines="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="인프콘 2023"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="17dp"
            android:layout_marginEnd="17dp" />

        <TextView
            android:text="@{myPost.updatedAt}"
            android:id="@+id/tv_my_post_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanum_square_regular"
            android:textColor="@color/gray"
            android:textSize="11sp"
            tools:text="2023.08.03"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tv_my_post_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="17dp" />

        <TextView
            android:text="@{myPost.content}"
            android:id="@+id/tv_my_post_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="17dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="17dp"
            android:ellipsize="end"
            android:maxLines="5"
            android:fontFamily="@font/nanum_square_regular"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_eventrecruitment_membername"
            tools:text="아무나 같이가실 분 구합니다! 역에서 만나서 같이가면 좋을 것 같아요! 많이들 신청해 주세용!!!" />

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray"
            android:id="@+id/materialDivider"
            android:layout_marginTop="17dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_my_post_date" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>


