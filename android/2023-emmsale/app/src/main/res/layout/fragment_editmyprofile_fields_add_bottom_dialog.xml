<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.emmsale.presentation.ui.editMyProfile.EditMyProfileViewModel" />

        <variable
            name="addFields"
            type="kotlin.jvm.functions.Function0" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="17dp"
        android:paddingBottom="17dp">

        <ImageView
            android:id="@+id/iv_editmyprofilefieldsdialog_topdecoration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:importantForAccessibility="no"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/img_bottomdialog_topdecoration" />

        <TextView
            android:id="@+id/tv_editmyprofilefieldsdialog_interest_tag_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="49dp"
            android:text="@string/editmyprofile_field_label"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_editmyprofilefieldsdialog_field_selection_guide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@{@string/editmyprofilebottomdialog_field_selection_guide(viewModel.profile.selectableFieldSize)}"
            android:textColor="@color/dark_gray"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/tv_editmyprofilefieldsdialog_interest_tag_label"
            app:layout_constraintTop_toBottomOf="@+id/tv_editmyprofilefieldsdialog_interest_tag_label"
            tools:text="최대 2개까지 선택 가능합니다." />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/cg_editmyprofilefieldsdialog_fields"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_editmyprofilefieldsdialog_field_selection_guide">

        </com.google.android.material.chip.ChipGroup>

        <TextView
            android:id="@+id/tv_editmyprofilefieldsdialog_add_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:background="@drawable/bg_all_two_state_button"
            android:enabled="@{viewModel.activities.selectedFieldsSize > 0 &amp;&amp; viewModel.activities.selectedFieldsSize &lt;=viewModel.profile.selectableFieldSize }"
            android:gravity="center"
            android:onClick="@{() -> addFields.invoke()}"
            android:paddingVertical="21dp"
            android:text="@string/editmyprofile_add"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cg_editmyprofilefieldsdialog_fields" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
