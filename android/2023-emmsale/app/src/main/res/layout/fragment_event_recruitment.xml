<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <import type="com.emmsale.presentation.common.FetchResult" />

        <variable
            name="vm"
            type="com.emmsale.presentation.ui.recruitmentList.EventRecruitmentViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="93dp"
        tools:background="@color/white">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_recruitment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:itemAnimator="@{null}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:listitem="@layout/item_recruitment" />

        <ProgressBar
            android:id="@+id/pb_eventDetailParticipant_loadingbar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:visible="@{vm.recruitments.fetchResult == FetchResult.LOADING}" />

        <include
            layout="@layout/layout_all_error_screen"
            android:background="@color/white"
            android:clickable="true"
            app:visible="@{vm.recruitments.fetchResult == FetchResult.ERROR}"
            bind:viewModel="@{vm}"
            tools:visibility="gone" />

        <androidx.core.widget.NestedScrollView
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:visible="@{vm.recruitments.list.empty &amp;&amp; vm.recruitments.fetchResult == FetchResult.SUCCESS}"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.emmsale.presentation.common.views.NoContentView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="30dp"
                app:description="@string/postlist_no_content_view_desc"
                app:layout_constraintTop_toTopOf="parent"
                app:noContentImageResId="@drawable/ic_no_result2"
                app:title="@string/postlist_no_content_view_title" />

        </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
