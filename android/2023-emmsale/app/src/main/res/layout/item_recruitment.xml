<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="recruitment"
            type="com.emmsale.presentation.ui.eventdetail.recruitment.uistate.RecruitmentUiState" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cv_recruitment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="17dp"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_recruitment_image"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    app:imageUrl="@{recruitment.imageUrl}"
                    app:isCircle="@{true}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:srcCompat="@tools:sample/avatars" />

                <TextView
                    android:id="@+id/tv_participant_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/nanum_square_extra_bold"
                    android:text="@{recruitment.name}"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    app:layout_constraintStart_toEndOf="@+id/iv_recruitment_image"
                    app:layout_constraintTop_toTopOf="@+id/iv_recruitment_image"
                    tools:text="최우석" />

                <TextView
                    android:id="@+id/tv_participant_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/nanum_square_regular"
                    android:maxEms="9"
                    android:text="@{recruitment.description}"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    app:layout_constraintStart_toEndOf="@+id/iv_recruitment_image"
                    app:layout_constraintTop_toBottomOf="@+id/tv_participant_username"
                    tools:text="안드로이드를 사랑하는 개발자에요" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button_request_companion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="14dp"
                    android:background="@drawable/bg_eventinformation_urlbutton"
                    android:fontFamily="@font/nanum_square_bold"
                    android:stateListAnimator="@null"
                    android:text="@string/recruitment_request_companion"
                    android:textColor="@color/white"
                    app:layout_constraintBottom_toBottomOf="@+id/iv_recruitment_image"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/iv_recruitment_image" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
