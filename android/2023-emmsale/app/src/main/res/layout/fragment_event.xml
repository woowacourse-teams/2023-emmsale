<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.emmsale.presentation.ui.main.event.EventViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".presentation.ui.main.event.EventFragment">

        <TextView
            android:id="@+id/tv_events_prefix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="12sp"
            android:layout_marginStart="17dp"
            android:textColor="@color/black"
            android:layout_marginTop="16dp"
            android:textStyle="bold"
            android:text="@string/event_count_prefix" />

        <TextView
            android:id="@+id/tv_events_count"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginStart="6dp"
            app:layout_constraintTop_toTopOf="@+id/tv_events_prefix"
            app:layout_constraintBottom_toBottomOf="@+id/tv_events_prefix"
            app:layout_constraintStart_toEndOf="@+id/tv_events_prefix"
            android:textColor="@color/event_total_event_count_text_color"
            tools:text="58"
            android:text="0"
            android:textSize="12sp"
            android:layout_height="0dp" />

        <TextView
            android:id="@+id/tv_events_suffix"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/tv_events_prefix"
            app:layout_constraintBottom_toBottomOf="@+id/tv_events_prefix"
            app:layout_constraintStart_toEndOf="@+id/tv_events_count"
            android:textColor="@color/black"
            android:layout_marginStart="1dp"
            android:layout_height="0dp"
            android:textSize="12sp"
            android:text="@string/event_count_suffix" />

        <LinearLayout
            android:id="@+id/layout_events_filter"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@+id/tv_events_prefix"
            app:layout_constraintBottom_toBottomOf="@+id/tv_events_prefix"
            app:layout_constraintEnd_toEndOf="parent"
            android:clickable="true"
            android:layout_marginEnd="17dp"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="2dp"
                android:src="@drawable/ic_event_filter" />

            <TextView
                android:id="@+id/tv_filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:text="@string/event_filter" />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_events"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/layout_events_filter"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:itemCount="5"
            android:background="@drawable/bg_event_recyclerview"
            android:layout_marginTop="12dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_event"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ProgressBar
            android:id="@+id/progressbar_loading"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:visibility="gone"
            app:layout_constraintDimensionRatio="0.15"
            android:layout_height="0dp"
            android:indeterminate="true" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
