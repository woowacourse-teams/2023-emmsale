<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="eventDetail"
            type="com.emmsale.presentation.ui.eventdetail.uistate.EventDetailUiState.Success" />

        <variable
            name="vm"
            type="com.emmsale.presentation.ui.eventdetail.EventDetailViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.eventdetail.EventDetailActivity">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbarlayout_eventdetail"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="56dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_eventdetail_backpress"
                android:layout_marginStart="21dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_all_arrowback" />
        </com.google.android.material.appbar.AppBarLayout>

        <TextView
            android:id="@+id/tv_eventdetail_eventname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="17dp"
            android:ems="12"
            android:text="@{eventDetail.name}"
            android:lineHeight="20dp"
            android:textColor="@color/text_color_black"
            android:fontFamily="@font/nanum_square_bold"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_eventdetail_eventstatus"
            tools:text="제 4회 대학생 나눔봉사 해커톤 프로그램"
            android:layout_marginTop="11dp" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipgroup_evendetail_tags"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/iv_eventdetail_poster"
            app:layout_constraintTop_toBottomOf="@id/tv_eventdetail_eventname"
            android:layout_marginTop="33dp"
            android:layout_marginStart="17dp"
            android:layout_marginEnd="17dp">
        </com.google.android.material.chip.ChipGroup>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@id/chipgroup_evendetail_tags"
            android:layout_marginTop="15dp"
            android:background="@color/text_color_white"
            android:id="@+id/line_eventdetail_top" />

        <TextView
            android:id="@+id/tv_eventdetail_eventstatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color_green"
            android:textSize="20sp"
            android:fontFamily="@font/nanum_square_bold"
            tools:text="진행중"
            android:text="@{eventDetail.status}"
            app:layout_constraintTop_toBottomOf="@+id/appbarlayout_eventdetail"
            android:layout_marginTop="11dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="17dp" />

        <TextView
            android:id="@+id/tv_eventdetail_eventplace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="21dp"
            android:text="@{eventDetail.location}"
            android:textSize="18sp"
            android:drawableLeft="@drawable/ic_eventdetail_place"
            android:drawablePadding="12dp"
            android:fontFamily="@font/nanum_square_regular"
            android:textColor="@color/text_color_black"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="삼성동 코엑스 몰 2층 101"
            app:layout_constraintTop_toBottomOf="@id/tv_eventdetail_eventdate"
            android:layout_marginTop="13dp" />

        <TextView
            android:id="@+id/tv_eventdetail_eventdate"
            android:drawableLeft="@drawable/ic_eventdetail_date"
            android:drawablePadding="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="21dp"
            android:layout_marginTop="17dp"
            android:text="@{eventDetail.startDate}"
            android:textSize="18sp"
            android:fontFamily="@font/nanum_square_regular"
            android:textColor="@color/text_color_black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/line_eventdetail_top"
            tools:text="2023.8.15 12:00 " />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tablayout_eventdetail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:tabSelectedTextAppearance="@style/EventDetail_SelectedTabStyle"
            app:tabTextAppearance="@style/EventDetail_NotSelectedTabStyle"
            app:tabTextColor="@color/text_color_black"
            app:tabSelectedTextColor="@color/text_color_green"
            app:tabIndicatorFullWidth="true"
            app:tabIndicatorColor="@color/text_color_green"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_eventdetail_eventplace" />

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/vp_eventdetail"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tablayout_eventdetail"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="1.0" />

        <ImageView
            android:scaleType="fitXY"
            app:imageUrl="@{eventDetail.imageUrl}"
            android:layout_width="100dp"
            android:layout_height="0dp"
            tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/iv_eventdetail_poster"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="17dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/appbarlayout_eventdetail"
            app:layout_constraintBottom_toBottomOf="@+id/chipgroup_evendetail_tags" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
