<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="kotlin.jvm.functions.Function1" />

        <import type="kotlin.Unit" />

        <variable
            name="imageUrl"
            type="String" />

        <variable
            name="deleteImage"
            type="Function1&lt;String, Unit>" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_item_post_image"
            app:imageUrl="@{imageUrl}"
            app:roundedImageRadius="@{10}"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:src="@drawable/img_all_loading" />

        <ImageView
            android:id="@+id/iv_item_post_image_delete"
            android:onClick="@{_->deleteImage.invoke(imageUrl)}"
            android:padding="10dp"
            android:src="@drawable/ic_all_close"
            android:background="@color/light_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@id/iv_item_post_image"
            app:layout_constraintTop_toTopOf="@id/iv_item_post_image" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
