<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <import type="com.emmsale.presentation.common.bindingadapter.DateTimePattern" />

        <variable
            name="vm"
            type="com.emmsale.presentation.ui.eventDetail.EventDetailViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="93dp">

                    <TextView
                        android:id="@+id/tv_event_info_apply_date_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="17dp"
                        android:layout_marginTop="24dp"
                        android:fontFamily="@font/nanum_square_bold"
                        android:text="@string/eventInfo_apply_date"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_even_info_apply_date"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="42dp"
                        android:layout_marginTop="24dp"
                        android:layout_marginEnd="17dp"
                        android:fontFamily="@font/nanum_square_regular"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        app:dateTimeFormatter="@{DateTimePattern.MONTH_DAY_WEEKDAY}"
                        app:endDateTime="@{vm.eventDetail.eventDetail.applicationEndDate}"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/tv_event_info_date_title"
                        app:layout_constraintTop_toTopOf="parent"
                        app:startDateTime="@{vm.eventDetail.eventDetail.applicationStartDate}"
                        tools:text="2023.08.15 12:00 ~ 2023.08.17 17:00" />

                    <TextView
                        android:id="@+id/tv_event_info_date_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="17dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/nanum_square_bold"
                        android:text="@string/eventInfo_date"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_even_info_apply_date" />

                    <TextView
                        android:id="@+id/tv_event_info_date"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="42dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="17dp"
                        android:fontFamily="@font/nanum_square_regular"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        app:dateTimeFormatter="@{DateTimePattern.MONTH_DAY_WEEKDAY}"
                        app:endDateTime="@{vm.eventDetail.eventDetail.endDate}"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/tv_event_info_date_title"
                        app:layout_constraintTop_toBottomOf="@+id/tv_even_info_apply_date"
                        app:startDateTime="@{vm.eventDetail.eventDetail.startDate}"
                        tools:text="2023.8.15 12:00 " />

                    <TextView
                        android:id="@+id/tv_event_info_place_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="17dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/nanum_square_bold"
                        android:text="@string/eventInfo_place"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_event_info_date" />

                    <TextView
                        android:id="@+id/tv_event_info_place"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="42dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="17dp"
                        android:fontFamily="@font/nanum_square_regular"
                        android:text="@{vm.eventDetail.eventDetail.location}"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/tv_event_info_place_title"
                        app:layout_constraintTop_toBottomOf="@id/tv_event_info_date"
                        tools:text="삼성동 코엑스 몰 2층 101" />

                    <TextView
                        android:id="@+id/tv_event_info_cost_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="17dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/nanum_square_bold"
                        android:text="@string/eventInfo_cost"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_event_info_place" />

                    <TextView
                        android:id="@+id/tv_event_info_cost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="42dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/nanum_square_regular"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        app:layout_constraintStart_toEndOf="@+id/tv_event_info_place_title"
                        app:layout_constraintTop_toBottomOf="@id/tv_event_info_place"
                        app:paymentType="@{vm.eventDetail.eventDetail.paymentType}"
                        tools:text="무료" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_event_info_images"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_event_info_cost"
                        tools:listitem="@layout/item_event_information_image" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </ScrollView>
        </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
