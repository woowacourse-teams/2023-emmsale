<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_childcomment_arrow"
        android:id="@+id/imageView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginStart="17dp"
        android:importantForAccessibility="no" />

    <TextView
        android:text="@string/comment_deleted_comment_author_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/tv_feeddetaildeletedchildcomment_title"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="18dp"
        android:textStyle="bold"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="17dp"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        android:layout_marginStart="8dp" />

    <TextView
        android:text="@string/comment_deleted_comment_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/tv_feeddetaildeletedchildcomment_title"
        app:layout_constraintStart_toStartOf="@+id/tv_feeddetaildeletedchildcomment_title"
        android:layout_marginTop="6dp"
        app:layout_constraintEnd_toEndOf="@+id/tv_feeddetaildeletedchildcomment_title"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="14dp" />
</androidx.constraintlayout.widget.ConstraintLayout>