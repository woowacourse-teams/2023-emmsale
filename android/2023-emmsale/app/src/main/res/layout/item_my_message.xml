<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="message"
            type="com.emmsale.presentation.ui.messageList.uistate.MyMessageUiState" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="@{message.message.isEmpty() ? View.GONE : View.VISIBLE}">

        <com.emmsale.presentation.common.views.WrapWidthTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="17dp"
            android:background="@drawable/bg_mymessage_message"
            android:paddingHorizontal="10dp"
            android:paddingVertical="10dp"
            android:text="@{message.message}"
            android:textColor="@color/my_message_text_color"
            android:textSize="12sp"
            app:layoutMarginTop="@{message.first ? @dimen/my_first_message_top_margin : @dimen/my_not_fisrt_message_top_margin}"
            app:layout_constrainedWidth="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="행사 같이 가시는거 어떠세요?" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>