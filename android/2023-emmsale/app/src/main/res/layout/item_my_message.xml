<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <import type="com.emmsale.presentation.common.bindingadapter.DateTimePattern" />

        <variable
            name="message"
            type="com.emmsale.presentation.ui.messageList.uistate.MyMessageUiState" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end">

        <TextView
            android:id="@+id/tv_chat_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginEnd="6dp"
            android:textColor="@color/gray"
            android:textSize="11sp"
            app:dateText="@{message.createdAt}"
            app:dateTimeFormatter="@{DateTimePattern.AM_PM_HOUR_MINUTE}"
            tools:text="오후 2:58" />

        <TextView
            android:id="@+id/tv_chat_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_mymessage_message"
            android:paddingHorizontal="10dp"
            android:paddingVertical="10dp"
            android:text="@{message.message}"
            android:textColor="@color/my_message_text_color"
            android:textSize="12sp"
            app:layout_marginTop="@{message.first ? @dimen/my_first_message_top_margin : @dimen/my_not_fisrt_message_top_margin}"
            tools:text="행사 같이 가시는거 어떠세요?" />

    </LinearLayout>

</layout>