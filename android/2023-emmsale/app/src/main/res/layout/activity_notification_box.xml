<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".presentation.ui.notificationBox.NotificationBoxActivity">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/tb_noti_box"
            android:layout_width="0dp"
            android:layout_height="?actionBarSize"
            android:keepScreenOn="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:navigationIcon="@drawable/ic_back"
            app:title="@string/notificationbox_title"
            app:titleCentered="true"
            app:titleTextAppearance="@style/EventFilterToolbarTitleFontStyle" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_noti_box"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tb_noti_box"
            tools:listitem="@layout/item_notification_body" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
