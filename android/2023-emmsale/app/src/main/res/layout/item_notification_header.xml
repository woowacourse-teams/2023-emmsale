<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_notification_header"
    android:paddingHorizontal="17dp"
    android:paddingVertical="20dp">

    <TextView
        android:id="@+id/tv_header_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/iv_toggle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="제 4회 대학생 나눔봉사 해커톤 프로그램" />

    <ImageView
        android:id="@+id/iv_toggle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginVertical="3dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/ic_toggle_up"
        app:layout_constraintBottom_toBottomOf="@+id/tv_header_title"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintStart_toEndOf="@+id/tv_header_title"
        app:layout_constraintTop_toTopOf="@+id/tv_header_title" />

</androidx.constraintlayout.widget.ConstraintLayout>
