<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="recruitment"
            type="com.emmsale.presentation.ui.eventdetail.recruitment.uistate.RecruitmentPostUiState" />

        <variable
            name="vm"
            type="com.emmsale.presentation.ui.eventdetail.recruitment.detail.RecruitmentPostDetailViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.ui.eventdetail.recruitment.detail.RecruitmentPostDetailActivity">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbarlayout_recruitmentdetail"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_recruitmentdetail_backpress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_all_arrowback"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="17dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_recruitmentdetail_appbartitle"
                    android:textSize="14sp"
                    android:fontFamily="@font/nanum_square_bold"
                    android:textColor="@color/black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:text="같이가요" />

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/gray"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_all_option"
                    android:id="@+id/iv_recruitmentdetail_option"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="16dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="8dp" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.appbar.AppBarLayout>

        <TextView
            android:text="@{recruitment.name}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanum_square_bold"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:id="@+id/tv_recruitmentdetail_membername"
            tools:text="김커디"
            app:layout_constraintTop_toBottomOf="@id/appbarlayout_recruitmentdetail"
            android:layout_marginTop="18dp"
            app:layout_constraintStart_toEndOf="@+id/iv_recruitmentdetail_profile_image"
            android:layout_marginStart="9dp" />

        <TextView
            android:text="@{@string/recruitmentpostdetail_update_date_format(recruitment.updatedAt)}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_recruitmentdetail_date"
            android:fontFamily="@font/nanum_square_regular"
            android:textSize="11sp"
            android:textColor="@color/gray"
            app:layout_constraintStart_toEndOf="@+id/iv_recruitmentdetail_profile_image"
            app:layout_constraintTop_toBottomOf="@+id/tv_recruitmentdetail_membername"
            tools:text="2023.08.03"
            android:layout_marginTop="6dp"
            android:layout_marginStart="9dp" />

        <TextView
            android:text="@{recruitment.content}"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:fontFamily="@font/nanum_square_regular"
            android:lineHeight="17.5dp"
            app:layout_constraintTop_toBottomOf="@+id/iv_recruitmentdetail_profile_image"
            android:id="@+id/tv_recruitmentdetail_message"
            tools:text="아무나 같이가실 분 구합니다! 역에서 만나서 같이가면 좋을 것 같아요! 많이들 신청해 주세용!!!"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="17dp"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toStartOf="@+id/iv_recruitmentdetail_profile_image" />

        <TextView
            android:visibility="@{vm.isMyPost ? View.GONE : View.VISIBLE}"
            android:enabled="@{!vm.companionRequest.isAlreadyRequest}"
            android:id="@+id/btn_recruitmentdetail_request_companion"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginBottom="17dp"
            android:background="@drawable/bg_all_two_state_button"
            android:layout_marginHorizontal="17dp"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/recruitmentpostdetail_request_button_text"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:fontFamily="@font/nanum_square_bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            app:imageUrl="@{recruitment.profileImageUrl}"
            app:isCircle="@{true}"
            android:layout_width="40dp"
            android:layout_height="40dp"
            tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/iv_recruitmentdetail_profile_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/appbarlayout_recruitmentdetail"
            android:layout_marginStart="17dp"
            android:layout_marginTop="14dp" />

        <ProgressBar
            android:visibility="@{(vm.recruitmentPost.loading||vm.companionRequest.isLoading)? View.VISIBLE:View.GONE}"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
