<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.ui.eventdetail.recruitment.RecruitmentDetailActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbarlayout_recruitmentdetail"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_recruitmentdetail_backpress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_all_arrowback"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="17dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_recruitmentdetail_appbartitle"
                android:textSize="14sp"
                android:fontFamily="@font/nanum_square_bold"
                android:textColor="@color/text_color_black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="같이가요" />

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/text_color_gray"
                app:layout_constraintBottom_toBottomOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nanum_square_bold"
        android:textSize="12sp"
        android:textColor="@color/text_color_black"
        android:id="@+id/tv_recruitmentdetail_membername"
        tools:text="김커디"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appbarlayout_recruitmentdetail"
        android:layout_marginTop="18dp"
        android:layout_marginStart="17dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_recruitmentdetail_date"
        android:fontFamily="@font/nanum_square_regular"
        android:textSize="11sp"
        android:textColor="@color/text_color_gray"
        app:layout_constraintStart_toEndOf="@+id/tv_recruitmentdetail_membername"
        app:layout_constraintTop_toTopOf="@+id/tv_recruitmentdetail_membername"
        android:layout_marginStart="7dp"
        tools:text="2023.08.03"
        app:layout_constraintBottom_toBottomOf="@+id/tv_recruitmentdetail_membername" />

    <TextView
        android:text="TextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:textColor="@color/text_color_black"
        android:textSize="13sp"
        android:fontFamily="@font/nanum_square_regular"
        app:layout_constraintTop_toBottomOf="@+id/tv_recruitmentdetail_membername"
        android:id="@+id/tv_recruitmentdetail_message"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="아무나 같이가실 분 구합니다! 역에서 만나서 같이가면 좋을 것 같아요! 많이들 신청해 주세용!!!"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="17dp"
        android:layout_marginStart="17dp" />

    <TextView
        android:id="@+id/btn_next"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginBottom="17dp"
        android:background="@drawable/bg_all_next"
        android:clickable="true"
        android:gravity="center"
        android:text="다음"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/text_color_gray"
        app:layout_constraintTop_toBottomOf="@id/tv_recruitmentdetail_message"
        android:layout_marginTop="16dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
