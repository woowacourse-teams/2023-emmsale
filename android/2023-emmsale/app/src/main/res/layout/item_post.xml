<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="post"
            type="com.emmsale.data.model.Post" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_post_title"
            android:text="@{post.title}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:fontFamily="@font/nanum_square_bold"
            android:layout_marginStart="17dp"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="타임라인 어떻게 되나요?" />

        <TextView
            android:id="@+id/tv_post_content"
            android:text="@{post.content}"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:ellipsize="end"
            android:fontFamily="@font/nanum_square_regular"
            android:textSize="13sp"
            android:layout_marginStart="17dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="41dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_post_title"
            app:layout_constraintEnd_toStartOf="@+id/iv_post_title_image"
            tools:text="행사 시간 공유 좀 해주실 분 부탁드려요요요ㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇ" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/icon_post_comment"
            android:layout_width="11sp"
            android:layout_height="11sp"
            android:src="@drawable/ic_all_comment"
            app:layout_constraintTop_toBottomOf="@+id/tv_post_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="17dp"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="15dp" />

        <TextView
            android:id="@+id/tv_post_comment_count"
            android:text="@{String.valueOf(post.commentCount)}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="3"
            android:layout_marginStart="3dp"
            android:textSize="11sp"
            android:fontFamily="@font/nanum_square_regular"
            android:textColor="@color/primary_color"
            app:layout_constraintStart_toEndOf="@+id/icon_post_comment"
            app:layout_constraintTop_toTopOf="@+id/icon_post_comment"
            app:layout_constraintBottom_toBottomOf="@+id/icon_post_comment" />

        <ImageView
            android:id="@+id/icon_post_like"
            android:layout_width="11sp"
            android:layout_height="11sp"
            android:src="@drawable/ic_all_like"
            android:layout_marginStart="6dp"
            app:layout_constraintStart_toEndOf="@+id/tv_post_comment_count"
            android:layout_marginTop="13dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_post_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="15dp" />

        <TextView
            android:id="@+id/tv_post_like_count"
            android:text="@{String.valueOf(post.likeCount)}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:fontFamily="@font/nanum_square_regular"
            android:textColor="@color/post_like_color"
            tools:text="1"
            android:layout_marginStart="3dp"
            app:layout_constraintStart_toEndOf="@+id/icon_post_like"
            app:layout_constraintTop_toTopOf="@+id/icon_post_like"
            app:layout_constraintBottom_toBottomOf="@+id/icon_post_like" />

        <View
            android:id="@+id/divider_like_to_time"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_marginStart="5dp"
            android:background="@color/light_gray"
            app:layout_constraintStart_toEndOf="@id/tv_post_like_count"
            app:layout_constraintTop_toTopOf="@+id/tv_post_created_at"
            app:layout_constraintBottom_toBottomOf="@+id/tv_post_created_at"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp" />

        <TextView
            android:id="@+id/tv_post_created_at"
            app:relativeDate="@{post.createdAt}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanum_square_regular"
            android:textSize="11sp"
            android:textColor="@color/light_gray"
            tools:text="15분전"
            android:layout_marginStart="5dp"
            app:layout_constraintStart_toEndOf="@+id/divider_like_to_time"
            app:layout_constraintTop_toTopOf="@+id/tv_post_like_count"
            app:layout_constraintBottom_toBottomOf="@+id/tv_post_like_count" />

        <ImageView
            android:id="@+id/iv_post_title_image"
            app:imageUrl="@{post.titleImageUrl}"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1:1"
            android:layout_marginEnd="17dp"
            android:layout_marginTop="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/icon_post_comment"
            tools:src="@drawable/img_all_loading" />

        <View
            android:id="@+id/divider_item"
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:background="@color/light_gray"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
