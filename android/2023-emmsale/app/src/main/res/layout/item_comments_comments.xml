<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="comment"
            type="com.emmsale.presentation.ui.eventdetail.comment.uiState.CommentUiState" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground">

        <TextView
            android:id="@+id/tv_comment_authorname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{comment.isDeleted ? @string/comment_deleted_comment_author_name : comment.authorName}"
            android:textSize="12sp"
            android:textStyle="bold"
            tools:text="김커디"
            app:layout_constraintStart_toEndOf="@+id/iv_comment_author_image"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/iv_comment_author_image" />

        <TextView
            android:id="@+id/tv_comment_lastmodifieddate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{comment.lastModifiedDate}"
            android:textColor="@color/gray"
            android:textSize="11sp"
            android:visibility="@{comment.isDeleted ? View.GONE : View.VISIBLE}"
            tools:text="2023.08.03"
            app:layout_constraintStart_toEndOf="@+id/tv_comment_authorname"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_comment_authorname"
            app:layout_constraintTop_toTopOf="@+id/tv_comment_authorname" />

        <TextView
            android:id="@+id/tv_comment_isupdated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:text="@string/comments_is_updated"
            android:textColor="@color/gray"
            android:textSize="11sp"
            android:visibility="@{(comment.isUpdated &amp;&amp; !comment.isDeleted)? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toBottomOf="@+id/tv_comment_lastmodifieddate"
            app:layout_constraintStart_toEndOf="@+id/tv_comment_lastmodifieddate"
            app:layout_constraintTop_toTopOf="@+id/tv_comment_lastmodifieddate" />

        <TextView
            android:id="@+id/tv_comment_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{comment.isDeleted ? @string/comment_deleted_comment_content : comment.content}"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tv_comment_authorname"
            app:layout_constraintTop_toBottomOf="@+id/tv_comment_authorname"
            tools:text="가나다라마바사아자차카타파하가나다라마바사아자차카타파하가나다라마바사아자차카타파하가나다라마바사아자차카타파하가나다라마바사아자차카타파하가나다라마바사아자차카타파하"
            android:layout_marginEnd="17dp"
            android:layout_marginTop="5dp" />

        <TextView
            android:id="@+id/tv_comment_childcommentscount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="10dp"
            android:padding="4dp"
            android:text="@{@string/comments_child_comments_count_format(comment.childCommentsCount)}"
            android:textColor="@color/gray"
            android:textSize="11sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tv_comment_content"
            app:layout_constraintTop_toBottomOf="@+id/tv_comment_content"
            tools:text="답글 0"
            android:layout_marginStart="-4dp" />

        <ImageView
            android:id="@+id/iv_comment_menubutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="13dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/comment_menu_button"
            android:padding="4dp"
            android:visibility="@{comment.isDeleted ? View.GONE : View.VISIBLE}"
            app:layout_constraintBottom_toBottomOf="@+id/tv_comment_authorname"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_comment_authorname"
            app:srcCompat="@drawable/ic_comment_menubutton" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/iv_comment_author_image"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:imageUrl="@{comment.authorImageUrl}"
            app:isCircle="@{true}"
            android:layout_marginStart="8dp"
            android:layout_marginTop="14dp"
            android:contentDescription="@string/comment_author_image" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
