<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:parentTag="android.widget.LinearLayout"
    tools:showIn="@layout/activity_conference_filter">

    <data>

    </data>

    <merge>

        <TextView
            android:id="@+id/tv_filter_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="18dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="14dp"
            android:text="@string/eventfilter_conference_duration_title"
            android:textSize="15sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="18dp"
            android:orientation="horizontal">

            <com.emmsale.presentation.common.views.IconTextButton
                android:id="@+id/btn_filter_start_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanum_square_regular"
                app:active="true"
                app:activeBackground="@drawable/bg_active_calendar_btn"
                app:icon="@drawable/ic_filter_selected_calendar"
                app:inactiveBackground="@drawable/bg_inactive_calendar_btn"
                tools:text="23.08" />

            <TextView
                android:id="@+id/duration_divider"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:fontFamily="@font/nanum_square_regular"
                android:text="@string/eventfilter_conference_duration_divider_mark" />

            <com.emmsale.presentation.common.views.IconTextButton
                android:id="@+id/btn_filter_end_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanum_square_regular"
                app:active="false"
                app:activeBackground="@drawable/bg_active_calendar_btn"
                app:icon="@drawable/ic_filter_selected_calendar"
                app:inactiveBackground="@drawable/bg_inactive_calendar_btn"
                tools:text="23.08" />

        </LinearLayout>

    </merge>
</layout>
