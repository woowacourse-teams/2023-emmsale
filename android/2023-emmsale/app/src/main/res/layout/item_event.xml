<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.emmsale.presentation.ui.main.event.uistate.EventUiState" />

        <import type="kotlin.Unit" />

        <variable
            name="event"
            type="EventUiState" />

        <variable
            name="onClickEvent"
            type="kotlin.jvm.functions.Function1&lt;EventUiState, Unit>" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{() -> onClickEvent.invoke(event)}">

        <TextView
            android:id="@+id/tv_event_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="2023 인프콘"
            android:text="@{event.name}"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_event_status"
            android:layout_width="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/tv_event_name"
            app:layout_constraintBottom_toBottomOf="@+id/tv_event_name"
            android:layout_height="wrap_content"
            android:text="@{event.status}"
            app:layout_constraintStart_toEndOf="@+id/tv_event_name"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="진행 중" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:startEventDateTime="@{event.startDate}"
            app:endEventDateTime="@{event.endDate}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_event_name"
            tools:text="기간 : 2023.01.01 ~ 2023.01.02" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
