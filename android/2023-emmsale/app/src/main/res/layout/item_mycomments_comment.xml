<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="comment"
            type="com.emmsale.presentation.ui.setting.myComments.uiState.MyCommentUiState" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground">

        <TextView
            android:text="@{comment.eventName}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_mycomments_event_name"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="17dp"
            android:layout_marginStart="17dp"
            android:textSize="13sp"
            android:textStyle="bold"
            tools:text="사실 없는 행사임" />

        <TextView
            android:text="@{comment.content}"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_mycomments_content"
            app:layout_constraintTop_toBottomOf="@+id/tv_mycomments_event_name"
            app:layout_constraintStart_toStartOf="@+id/tv_mycomments_event_name"
            android:layout_marginTop="6dp"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="17dp"
            tools:text="해커톤 프로그램 열려서 너무 좋아요.해커톤 프로그램 열려서 너무 좋아요.해커톤 프로그램 열려서 너무 좋아요.해커톤 프로그램 열려서 너무 좋아요.해커톤 프로그램 열려서 너무 좋아요.해커톤 프로그램 열려서 너무 좋아요."
            android:lineSpacingExtra="3dp" />

        <TextView
            android:text="@{@string/comments_child_comments_count_format(comment.childCount)}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_mycomments_child_count"
            android:layout_marginBottom="17dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_mycomments_content"
            app:layout_constraintStart_toStartOf="@+id/tv_mycomments_event_name"
            android:textSize="11sp"
            android:textColor="@color/primary_color"
            android:layout_marginTop="8dp"
            tools:text="답글 0" />

        <TextView
            android:text="@{comment.lastModifiedDate}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_mycomment_last_modified_date"
            app:layout_constraintStart_toEndOf="@+id/tv_mycomments_child_count"
            app:layout_constraintTop_toTopOf="@+id/tv_mycomments_child_count"
            app:layout_constraintBottom_toBottomOf="@+id/tv_mycomments_child_count"
            android:layout_marginStart="8dp"
            android:textSize="11sp"
            android:textColor="@color/gray"
            tools:text="2023.08.11" />

        <TextView
            android:text="@string/comments_is_updated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_mycomments_modified_label"
            app:layout_constraintStart_toEndOf="@+id/tv_mycomment_last_modified_date"
            app:layout_constraintTop_toTopOf="@+id/tv_mycomment_last_modified_date"
            app:layout_constraintBottom_toBottomOf="@+id/tv_mycomment_last_modified_date"
            android:layout_marginStart="3dp"
            android:textSize="11sp"
            android:textColor="@color/gray" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>