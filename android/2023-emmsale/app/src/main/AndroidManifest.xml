<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:name=".presentation.KerdyApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Emmsale"
        android:usesCleartextTraffic="true"
        tools:targetApi="33">
        <activity
            android:name=".presentation.ui.splash.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.Emmsale.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".presentation.ui.main.setting.UseTermWebViewActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.ui.main.setting.openProfileUrl.OpenProfileUrlConfigActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.ui.main.setting.myPost.MyPostActivity"
            android:exported="true" />
        <activity
            android:name=".presentation.ui.main.setting.notificationTagConfig.NotificationTagConfigActivity"
            android:exported="true" />
        <activity
            android:name=".presentation.ui.main.setting.myComments.MyCommentsActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.ui.main.setting.block.MemberBlockActivity"
            android:exported="true" />
        <activity
            android:name=".presentation.ui.main.setting.notification.NotificationConfigActivity"
            android:exported="true" />
        <activity
            android:name=".presentation.ui.eventdetail.recruitment.writing.RecruitmentPostWritingActivity"
            android:exported="true" />
        <activity
            android:name=".presentation.ui.eventdetail.recruitment.detail.RecruitmentPostDetailActivity"
            android:exported="true" />
        <activity
            android:name=".presentation.ui.main.myProfile.editMyProfile.EditMyProfileActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.ui.profile.ProfileActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.ui.notificationBox.NotificationBoxActivity"
            android:exported="true" />
        <activity
            android:name=".presentation.ui.notificationBox.recruitmentNotification.RecruitmentNotificationFragment"
            android:exported="true" />
        <activity
            android:name=".presentation.ui.eventdetail.comment.childComment.ChildCommentActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.ui.main.event.conferenceFilter.ConferenceFilterActivity"
            android:exported="true" />
        <activity
            android:name=".presentation.ui.main.event.competitionFilter.CompetitionFilterActivity"
            android:exported="true" />
        <activity
            android:name=".presentation.ui.main.MainActivity"
            android:exported="true"
            android:launchMode="singleTask" />
        <activity
            android:name=".presentation.ui.onboarding.OnboardingActivity"
            android:exported="true" />
        <activity
            android:name=".presentation.ui.eventdetail.EventDetailActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.ui.login.LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.Emmsale.FullScreen"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="github-auth"
                    android:scheme="kerdy" />
            </intent-filter>
        </activity>

        <service
            android:name=".presentation.service.KerdyFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>
